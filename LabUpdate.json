{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "VMName": {
        "type": "string",
        "minLength": 5,
        "maxLength": 15,
        "metadata": {
          "description": "This name will also be used to prefix the network security group, storage, virtual network, network card, subnet and public IP address name."
        }
      },
      "Location": {
      "type": "string",
      "defaultValue": "West Europe",
      "allowedValues": [
        "East US",
        "West US",
        "West Europe",
        "East Asia",
        "Southeast Asia"
      ],
      "metadata": {
        "description": "Resource Location"
      }
    },
        "cpelsEmail": {
            "type": "string",
            "minLength": 5,
            "metadata": {
                "description": "Your Email address used during cpels account creation."
            }
        },
        "cpelsSerial": {
            "type": "string",
            "minLength": 2,
            "metadata": {
                "description": "Your cpels serial"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "minLength": 1
        },
        "_artifactsLocationSasToken": {
            "type": "securestring"
        },
        "Script2ScriptFolder": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Script file location. This path is relative to the _artifactsLocation parameter"
            }
        },
        "Script2ScriptFileName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Name of the script file"
            }
        }
    },
    "variables": {
        "apiVersion": "2015-05-01-preview",
        "scriptArgs": "[concat(parameters('cpelsEmail'), ' ', parameters('cpelsSerial'))]"

    },
    "resources": [

        {
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "VirtualMachine"
            },



            "resources": [
                {
                    "name": "MyOwnCloudDesktopConfiguration",
                    "type": "extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2015-06-15",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
                    ],
                    "tags": {
                        "displayName": "MyOwnCloudDesktop"
                    },
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.2",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://api.myowncloud.nl/rdpgatewaycode/standaloneRDPGatewayConfig.ps1"
                            ],
                            "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File standaloneRDPGatewayConfig.ps1 ',variables('scriptArgs'))]"
                        }
                    }
                }
            ]
        }
    ]
}
